<% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="card">
        <div class="card-body">
          <h1 class="card-title text-center">Generate Minesweeper Board</h1>

          <%= form_with(model: @board, url: boards_path, local: true) do |form| %>
            <div class="mb-3">
              <%= form.label :email, 'Email', class: 'form-label' %>
              <%= form.email_field :email, class: 'form-control', required: true %>
            </div>

            <div class="mb-3">
              <%= form.label :width, 'Width', class: 'form-label' %>
              <%= form.number_field :width, class: 'form-control', required: true %>
            </div>

            <div class="mb-3">
              <%= form.label :height, 'Height', class: 'form-label' %>
              <%= form.number_field :height, class: 'form-control', required: true %>
            </div>

            <div class="mb-3">
              <%= form.label :mines, 'Number of Mines', class: 'form-label' %>
              <%= form.number_field :mines, class: 'form-control', required: true %>
            </div>

            <div class="mb-3">
              <%= form.label :name, 'Name', class: 'form-label' %>
              <%= form.text_field :name, class: 'form-control', required: true %>
            </div>

            <div class="d-grid gap-2 mb-3">
              <%= form.submit 'Generate Board', class: 'btn btn-primary btn-lg' %>
            </div>
          <% end %>

          <h2 class="card-title text-center">Ten Most Recent Boards</h2>
          <%= render partial: 'recent_boards', locals: { recent_boards: @recent_boards } %>

          <div class="text-center mt-3">
            <%= link_to "View All Generated Boards", boards_path, class: "btn btn-secondary custom-button" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
